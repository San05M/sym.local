{% extends 'base.html.twig' %}

{% block title %}Imagen index{% endblock %}

{% block principal %}
    <h1>Imagen index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Imagen</th>
                <th>Nombre</th>
                <th>Descripcion</th>
                <th>Categoria</th>
                <th>NumVisualizaciones</th>
                <th>NumLikes</th>
                <th>NumDownloads</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for imagen in imagens %}
            <tr>
                <td>{{ imagen.id }}</td>
                <td><img src="{{ imagen.getUrlSubidas }}" alt="Imagen" style="max-width: 50px;"></td>
                <td>{{ imagen.nombre }}</td>
                <td>{{ imagen.descripcion }}</td>
                <td>{{ imagen.categoria }}</td>
                <td>{{ imagen.numVisualizaciones }}</td>
                <td>{{ imagen.numLikes }}</td>
                <td>{{ imagen.numDownloads }}</td>
                <td>
                    <button class="btn"><a href="{{ path('app_imagen_show', {'id': imagen.id}) }}">Ver</a></button>
                    <button class="btn"><a href="{{ path('app_imagen_edit', {'id': imagen.id}) }}">Editar</a></button>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <button class="btn"><a href="{{ path('app_imagen_new') }}">Crear Nuevo</a></button>
{% endblock %}
